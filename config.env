# Slack Configuration
SLACK_WEBHOOK_URL=YOUR_SLACK_WEBHOOK_URL_HERE
SLACK_CHANNEL=forth-alerts
SLACK_USERNAME=Gmail Monitor

# Gmail Configuration
GMAIL_QUERY=to:reporting@deudaslibres.com (subject:"Cancellation" OR subject:"Cancel" OR subject:"cancelled" OR subject:"Payment Error") newer_than:7d

# Google Service Account Credentials (for Render deployment)
# Get these from your service account JSON key file
GOOGLE_SERVICE_ACCOUNT_EMAIL=YOUR_SERVICE_ACCOUNT_EMAIL_HERE
GOOGLE_DELEGATED_EMAIL=reporting@deudaslibres.com
GOOGLE_PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE
GOOGLE_PROJECT_ID=master-cpa-data
GOOGLE_PRIVATE_KEY_ID=YOUR_PRIVATE_KEY_ID_HERE
GOOGLE_CLIENT_ID=YOUR_CLIENT_ID_HERE

# Polling Configuration
POLL_INTERVAL_SECONDS=60
TIMEZONE=Asia/Manila

# Optional Settings
RETURN_FULL_BODY=true
MODE=combined   # 'server' (Flask only), 'worker' (polling only), or 'combined' (both)

# Server Configuration (for Render deployment)
PORT=10000
